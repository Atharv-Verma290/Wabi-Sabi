<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAE3D6"
    tools:context=".Splash">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="556dp"
        android:layout_height="530dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Wasabi image"
        app:layout_constraintBottom_toTopOf="@+id/wabi_sabi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/wasabii" />

    <TextView
        android:id="@+id/wabi_sabi"
        android:layout_width="0dp"
        android:layout_height="99dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="127dp"
        android:fontFamily="@font/monotone"
        android:gravity="center"
        android:text="@string/wabi_sabi"
        android:textAppearance="@style/wabi_sabi"
        android:textColor="#F89999"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>